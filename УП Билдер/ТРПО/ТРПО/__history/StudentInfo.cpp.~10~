//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop
#include "main.h"
#include "TRPO.h"
#include "AddStudent.h"
#include "StudentInfo.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm3 *Form3;
//---------------------------------------------------------------------------
__fastcall TForm3::TForm3(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
extern int sele;
void __fastcall TForm3::nextClick(TObject *Sender)
{
	Form1->ADOQuery1->Next();
}
//---------------------------------------------------------------------------
void __fastcall TForm3::backClick(TObject *Sender)
{
	Form1->ADOQuery1->Prior();
}
//---------------------------------------------------------------------------
void __fastcall TForm3::FormActivate(TObject *Sender)
{
	Form1->ADOQuery1->First();
	while(!Form1->ADOQuery1->Eof)
	{
		if(Form1->ADOQuery1->FieldByName("Номер")->AsInteger==sele)
		{
		   break;
		}
		Form1->ADOQuery1->Next();
    }
}
//---------------------------------------------------------------------------
void __fastcall TForm3::changeClick(TObject *Sender)
{
	change->Enabled=false;
	next->Enabled=false;
	back->Enabled=false;
	save->Enabled=true;
}
//---------------------------------------------------------------------------
void __fastcall TForm3::saveClick(TObject *Sender)
{
    if(name->Text!="" &&fam->Text!=""&&otch->Text!=""&&cource->Text!="")
			{
			   ADOQuery1->Edit();
			   ADOQuery1->Fields->FieldByName("Фамилия")->AsString=Edit1->Text;
			   ADOQuery1->Fields->FieldByName("Улица")->AsString=Edit2->Text;
			   ADOQuery1->Fields->FieldByName("Номердома")->AsInteger=StrToInt(Edit3->Text);
			   ADOQuery1->Fields->FieldByName("Квартира")->AsInteger=StrToInt(Edit4->Text);
			   ADOQuery1->Post();

				Edit1->Text="";
				Edit2->Text="";
				Edit3->Text="";
				Edit4->Text="";
				change->Enabled=true;
				next->Enabled=true;
				back->Enabled=true;
				save->Enabled=false;
			}
}
//---------------------------------------------------------------------------

