#include "main.h"
#include "TRPO.h"
#include "AddStudent.h"
#include "StudentInfo.h"
#include <string>
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm15 *Form15;
//---------------------------------------------------------------------------
__fastcall TForm15::TForm15(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
extern int mode;
String log,word, password_1;
void __fastcall TForm15::RegButtonClick(TObject *Sender)
{
	Form15->Caption="Регистрация";
	eye1->Visible=true;
	eye2->Visible=true;
	RegButton->Visible=false;
	InButton->Visible=false;
	RegAcc->Visible=true;
	login->Visible=true;
	pass->Visible=true;
	reppass->Visible=true;
	Back->Visible=true;
}
//---------------------------------------------------------------------------

void __fastcall TForm15::InButtonClick(TObject *Sender)
{
	Form15->Caption="Вход в систему";
	eye1->Visible=true;
	login->Visible=true;
	pass->Visible=true;
	InAcc->Visible = true;
	RegButton->Visible = false;
	InButton->Visible = false;
    Back->Visible=true;
}
//---------------------------------------------------------------------------





void __fastcall TForm15::BackClick(TObject *Sender)
{
	Form15->Caption="Главное меню входа в систему";
	RegAcc->Visible = false;
	InAcc->Visible = false;
	login->Visible=false;
	pass->Visible=false;
	reppass->Visible=false;
	Back->Visible=false;
	RegButton->Visible=true;
	InButton->Visible=true;
	eye1->Visible=false;
	eye2->Visible=false;
}
//---------------------------------------------------------------------------

void __fastcall TForm15::InAccClick(TObject *Sender)
{
	if(login->Text=="" || pass->Text=="")
	 {
	  Application->Title="Ошибка!";
	  ShowMessage("Пожалуйста, заполните все поля для авторизации.");
	 }
	 else
	 {
		  log=login->Text;
		  word=pass->Text;
		  bool flag=false;
		  ADOQuery1->First();
		  while(!ADOQuery1->Eof)
		  {
			   if(ADOQuery1->FieldByName("Логин")->AsString==log)
			   {
				flag=true;
				break;
			   }
			   ADOQuery1->Next();
		  }
		  if(!flag)
		  {
		   Application->Title="Ошибка!";
		   ShowMessage("Неверный логин или пароль!");
		   login->Clear();
		   pass->Clear();
		  }
		  else
		  {
			   if(ADOQuery1->FieldByName("Пароль")->AsString==password)
			   {
				Form15->Hide();
				Form1->Show();
			   }
			   else
			   {
				Application->Title="Ошибка!";
				ShowMessage("Неверный логин или пароль!");
				log->Clear();
				word->Clear();
			   }
		  }
	 }


}
//---------------------------------------------------------------------------

void __fastcall TForm15::RegAccClick(TObject *Sender)
{
    if (pass->Text == "" || reppass->Text == "" || login->Text == "" )
	 {
		Application->Title = "Ошибка!";
		ShowMessage("Пожалуйста, заполните все поля для регистрации.");
	}
	else {
		log = login->Text;
		word = pass->Text;
		password_1 = reppass->Text;

		if (word != password_1) {
			Application->Title = "Ошибка!";
			ShowMessage("Введенные вами пароли не совпадают.");
		}
		else {
			bool flag = false;
			while (!ADOQuery1->Eof) {
				if (ADOQuery1->FieldByName("Login")->AsString == log)
					flag = true;
				ADOQuery1->Next();
			}

			if (flag == true) {
				Application->Title = "Ошибка!";
				ShowMessage("Данный логин уже зарегистрирован другим пользователем.");
				login->Clear();
			}
			else {
				ADOQuery1->Insert();
				ADOQuery1->FieldByName("Login")->AsString = log;
				ADOQuery1->FieldByName("Password")->AsString = word;
				ADOQuery1->Post();
				ADOQuery1->Last();
                ShowMessage("Вы успешно зарегистрировались");
				Form15->Caption="Главное меню входа в систему";
				eye1->Visible=false;
				eye2->Visible=false;
				RegAcc->Visible = false;
				InAcc->Visible = false;
				login->Visible=false;
				pass->Visible=false;
				reppass->Visible=false;
				Back->Visible=false;
				RegButton->Visible=true;
				InButton->Visible=true;
			}
		}
	}

}
//---------------------------------------------------------------------------


void __fastcall TForm15::eye1MouseLeave(TObject *Sender)
{
	 pass->PasswordChar='*';
}
//---------------------------------------------------------------------------

void __fastcall TForm15::eye1MouseEnter(TObject *Sender)
{
	  pass->PasswordChar='\0';
}
//---------------------------------------------------------------------------


void __fastcall TForm15::eye2MouseLeave(TObject *Sender)
{
   reppass->PasswordChar='*';
}
//---------------------------------------------------------------------------

void __fastcall TForm15::eye2MouseEnter(TObject *Sender)
{
	 reppass->PasswordChar='\0';
}
